<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Edit Comments</h1>

    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" >Submit!</button>
            </div>
        </form>
        <a class="btn btn-danger btn-block" href="/campgrounds/<%= campground_id %>">Cancel</a>
    </div>
    
</div>

<% include ../partials/footer %>